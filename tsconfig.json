{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@lib/react.js": ["./dist/react.d.ts"],
      "@lib/*": ["./dist/*"],
      "@types/*": ["./dist/types/*"],
      "@utils/*": ["./dist/utils/*"]
    },
    "typeRoots": ["dist/types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
